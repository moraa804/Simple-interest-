*/
#include <stdio.h>
int main()
{
    float principal,rate,time,interest;
    printf("enter the principal:\n");
    scanf("%f",& principal);
    printf("enter rate: \n");
    scanf("%f",&rate);
    printf("enter time: \n");
    scanf("%f", & time);
    //calculating the SI
    interest=principal*rate/100*time;
    printf("the simple interest is:%2f \n", interest);

    return 0;
}
